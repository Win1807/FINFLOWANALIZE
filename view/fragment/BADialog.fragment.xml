<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
	    id = "BADialog"
		noDataText="{i18n>NoDataFound}"
		title="{i18n>SBADialogTitle}"
		liveChange="onHandleSearchForBAH"
		search="onHandleSearchForBAH"
		confirm="onHandleCloseForBAH"
		close="onHandleCloseForBAH"
		items="{
			path: '/FCLM_CFBA_BKH_VHSet'
		}" >
		<StandardListItem
			title="{HierarchyName}"
			description="{HierarchyText}"
			info="{HierarchyTypeText}"
			type="Active" />
	</SelectDialog>
</core:FragmentDefinition>